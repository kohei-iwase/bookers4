        <span class="container">
          <span class="row">
            <%= render "layouts/header" %>
            <div class="col-xs-3">
            <%= render 'layouts/user', user: @user %>
            <%= render 'layouts/new', book: @book %>
          </div>
      <div class="col-xs-9">
         <h1>Books</h1>
     <table class="table table-striped">
   		<thead>
   			<tr>
   				<strong>
            <th></th>
      			<th>Title</th>
      			<th>Opinion</th>
      		</strong>
  		   </tr>
  		</thead>
  		<tbody>
  			<% @books.each do |book| %>
    		  <tr>
            <td>
            <%= link_to user_path(book.user.id), target: "_blank" do %>
            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "pull-left profile-thumb" ,fallback: "no_image.jpg" %>
            <% end %></td>
	      		<td><%= link_to book.title, "/books/#{book.id}" %></td>
	      		<td><%= book.body %></td>
	      	</tr>
	      <% end %>
	    </tbody>
	   </table>
   </div>
   </div>
 </div>
</span>
</span>