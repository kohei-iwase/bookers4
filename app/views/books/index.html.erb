 <html>
 <head>
  <title>Bookers</title>
  <%= render "layouts/header" %>
 <h1>Books</h1>
</head>
<body>
   <table>
   		<thead>
   			<tr>
   				<strong>
      			<th>Title</th>
      			<th>Opinion</th>
      			</strong>
      			<th colspan="4"></th>
  			</tr>
  		</thead>
  		<tbody>
  				<% @books.each do |book| %>
    			<tr>
            <td>
            <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img" %></td>
	      		<td><%= book.title %></td>
	      		<td><%= book.opinion %></td>
	      		<td>
	      			<%= link_to "Show", "/books/#{book.id}" %>
	      		</td>
	      		<td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
	      		<td><%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
	      	</tr>
	      	<% end %>
	    </tbody>
	</table>
</body>
</html>