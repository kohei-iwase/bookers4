<%= render "layouts/header" %>
	<div crass="container">
		<div crass="row">
			<div crass="col-xs-3">
			<h1>Editing Book</h1>
			<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
				<%= render 'layouts/error_messages', model: f.object %>
				<div crass="row">Title</div>
			    <div crass="row"><%= f.text_field :title %></div>
				<div crass="row">Opinion</div>
		    	<div crass="row"><%= f.text_area :body %></div>
				<div crass="row"><%= f.submit 'Update Book' %></div>
				<div crass="row"><%= link_to "Show", "/books/#{@book.id}" %>
					|<%= link_to "Back", "/books" %></div>
   				<% end %>
   			</div>
   		</div>
	</div>