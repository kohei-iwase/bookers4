<html>
<body>

<div class="container">
<%= render "layouts/header" %>
<div class="profile-container">
	<div class="row">
	      <div class="col-md-3" style="background-color:orange;">
<h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img" %>
    <!-- fallback:noimageいれる-->
<br>
<table class="table table-striped">
	<tr>
    <th>name</th>
    <th><%= @user.name %></th>
    </tr>
	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>
</table>
	 <% if @user.id == current_user.id %>
        <p><div class ="row">
            <div class ="col-xs-12 btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true">
        	<%= link_to "", edit_user_path(@user) %></span></div>
        </div>
        </p>
    <% end %>


<h2>New book</h2>
<!-- form_for部分 -->
<%= form_for(@book, url: '/books') do |f| %>
<!-- エラー部分 -->
<%= render 'layouts/error_messages', model: f.object %>

<div class= "row">
<div class= "col-xs-12">
    <h5>Title</h5>
    <%= f.text_field :title ,class:"col-xs-12" %>
	<h5>Opinion</h5>
    <%= f.text_area :opinion,class:"col-xs-12" %>
</div>
</div>
 <p>
    <div>
 <%= f.submit "Create Book", class:"btn btn-primary btn-block active" %>
</p>
</div>
<% end %>
</div>
</div>
</div>
</body>
</html>