<html>
    <body>
        <span class="container">
            <%= render "layouts/header" %>
            <%= render 'layouts/user', user: @user %>
            <%= render 'layouts/new', book: @book %>
      </div>
      <div class="col-md-10" style="background-color:green">
         <h1>Users</h1>
     <table class="table table-striped">
      <thead>
        <tr>
          <strong>
            <th>image</th>
            <th>name</th>
            <th></th>
          </strong>
         </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', class: "profile-thumb", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", "/users/#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
     </table>
   </div>
   </div>
 </div>
</body>
</html>